<view class="round-click bg-gradual-blue cu-btn shadow" bindtap='publish'>
  <text>发布</text>
</view>
<view class="cu-modal {{modalName=='DialogModal'?'show':''}}">
  <view class="cu-dialog">
    <view class="cu-bar bg-white justify-end">
      <view class="content">发布新内容</view>
      <view class="action" bindtap="hideModal">
        <text class="cuIcon-close text-red"></text>
      </view>
    </view>
    <view class="padding-sm">
      <view class="cu-form-group">
        <textarea maxlength="-1" disabled="{{modalName!=null}}" bindinput="textareaAInput" placeholder="输入新内容"></textarea>
      </view>
    </view>
    <view class="cu-bar bg-white justify-end">
      <view class="action">
        <button class="cu-btn line-blue" bindtap="hideModal">取消</button>
        <button class="cu-btn bg-gradual-blue margin-left" bindtap="hideModal">发布</button>
      </view>
    </view>
  </view>
</view>